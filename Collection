import java.util.ArrayList;
import java.util.Collections;
import java.util.Random;

public class Collection {

    private static ArrayList<Integer> list = new ArrayList<>();
    public static void main(String[] args) {
        dataCreation();
    }


    private static int[] addNumbers(){
        Random random = new Random();
        int [] massive1 = new int[10];
        for(int i = 0; i < massive1.length; i++){
            massive1[i] = random.nextInt(11);
            System.out.print(massive1[i] + " ");
        }
        return massive1;
    }

    private static void filtration(int[] massive2){
        for(int i = 0; i < massive2.length; i++){
            if(massive2[i] % 2 != 0 || massive2[i] == 2){
                list.add(massive2[i]);
            }
        }
    }

    private static void sort(ArrayList<Integer> list1){
        Collections.sort(list1);
        Collections.reverse(list1);
        System.out.println(list1);
    }

    private static void dataCreation(){
        int[] massive = addNumbers();
        System.out.println();
        filtration(massive);
        sort(list);
    }
}
